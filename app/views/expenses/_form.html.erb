<%= form_with(model: expense) do |form| %>
  <% if expense.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(expense.errors.count, "error") %> prohibited this expense from being saved:</h2>

      <ul>
        <% expense.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form__content">
    <%= form.label :date, style: "display: block", class: "form__content-label" %>
    <%= form.date_field :date, class: "form__content-field" %>
  </div>

  <div class="form__content">
    <%= form.label :category, style: "display: block", class: "form__content-label" %>
    <%= form.text_field :category, class: "form__content-field" %>
  </div>

  <div class="form__content">
    <%= form.label :quantity, style: "display: block", class: "form__content-label" %>
    <%= form.number_field :quantity, class: "form__content-field" %>
  </div>

  <div class="form__content">
    <%= form.label :unit_price, style: "display: block", class: "form__content-label" %>
    <%= form.number_field :unit_price, class: "form__content-field" %>
  </div>

  <div class="form__content">
    <%= form.label :description, style: "display: block", class: "form__content-label" %>
    <%= form.text_area :description, class: "form__content-field" %>
  </div>

  <div class="form__content">
    <%= form.label :batch_no, style: "display: block", class: "form__content-label" %>
    <%= form.collection_select :batch_id, Batch.all, :id, :batch_no, {prompt: true}, class: 'form-control form__content-field' %>
  </div>

  <div class="form__submit">
    <%= form.submit class: "btn-success" %>
  </div>
<% end %>
