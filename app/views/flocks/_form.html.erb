<%= form_with(model: flock) do |form| %>
  <% if flock.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(flock.errors.count, "error") %> prohibited this flock from being saved:</h2>

      <ul>
        <% flock.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

 
  <div class="form__content">
    <%= form.label :batch_no, style: "display: block", class: "form__content-label" %>
    <%= form.collection_select :batch_id, Batch.all, :id, :batch_no, {prompt: true}, class: 'form-control', class: "form__content-field" %>
  </div>

  <div class="form__content">
    <%= form.label :date_in, style: "display: block", class: "form__content-label" %>
    <%= form.date_field :date_in, class: "form__content-field" %>
  </div>

  <div class="form__content">
    <%= form.label :retirement_date, style: "display: block", class: "form__content-label" %>
    <%= form.date_field :retirement_date, class: "form__content-field" %>
  </div>

  <div class="form__content">
    <%= form.label :source, style: "display: block", class: "form__content-label" %>
    <%= form.text_field :source, class: "form__content-field" %>
  </div>

  <div class="form__content">
    <%= form.label :initial_stock, style: "display: block", class: "form__content-label" %>
    <%= form.number_field :initial_stock, class: "form__content-field" %>
  </div>

  <div class="form__content">
    <%= form.label :died_stock, style: "display: block", class: "form__content-label" %>
    <%= form.number_field :died_stock, class: "form__content-field" %>
  </div>

  <div class="form__content">
    <%= form.label :notes, style: "display: block", class: "form__content-label" %>
    <%= form.text_area :notes, class: "form__content-field" %>
  </div>

  <div class="form__content">
    <%= form.label :status, style: "display: block", class: "form__content-label" %>
    <%= form.text_field :status, class: "form__content-field" %>
  </div>

  <div class="form__content">
    <%= form.label :flock_type, style: "display: block", class: "form__content-label" %>
    <%= form.text_field :flock_type, class: "form__content-field" %>
  </div>

  <div class="form__submit">
    <%= form.submit class: "btn-success" %>
  </div>
<% end %>
