<%= render 'layouts/sidebar' %>

<div class="content__details">

  <p style="color: green"><%= notice %></p>
  <div class="resource-title">
    <h1>Batches</h1>
      <%= link_to "Add Batch", new_batch_path, class: "btn-success" %>
  </div>


  <div class="table-responsive">
    <table class="table-striped">
      <thead>
        <tr>
          <th class="table-header" scope="col">Number</th>
          <th class="table-header" scope="col">Type</th>
          <th colspan="3" class="table-header"></th>
        </tr>
      </thead>

      <tbody>
        <% @batches.each do |batch| %>
          <tr class="table-row">
            <td class="table-data"><%= batch.batch_no %></td>
            <td class="table-data"><%= batch.flock_type %></td>
            <td class="table-data"><%= link_to 'Show', batch, class: 'btn-success' %></td>
            <td class="table-data"><%= link_to 'Edit', edit_batch_path(batch), class: 'btn-secondary' %></td>
            <td class="table-data"><%= link_to 'Destroy', batch, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn-danger' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="paginate-bottom">
    <%= paginate @batches %>
  </div>
</div>
