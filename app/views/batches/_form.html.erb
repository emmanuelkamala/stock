<%= form_with(model: batch) do |form| %>
  <% if batch.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(batch.errors.count, "error") %> prohibited this batch from being saved:</h2>

      <ul>
        <% batch.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form__content">
    <%= form.label :batch_no, style: "display: block", class: "form__content-label" %>
    <%= form.number_field :batch_no, class: "form__content-field" %>
  </div>

  <div class="form__content">
    <%= form.label :flock_type, style: "display: block", class: "form__content-label" %>
    <%= form.text_field :flock_type, class: "form__content-field" %>
  </div>

  <div class="form__submit">
    <%= form.submit class: "btn-success" %>
  </div>
<% end %>
